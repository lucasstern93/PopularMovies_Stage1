<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.studyMovies.udacitypopularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.udacity.studyMovies.udacitypopularmovies.MovieActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.udacity.studyMovies.udacitypopularmovies.MovieDetailsActivity"
            android:label="@string/activity_movie_details_title"
            android:parentActivityName="com.udacity.studyMovies.udacitypopularmovies.MovieActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.udacity.studyMovies.udacitypopularmovies.MovieActivity" />
        </activity>

        <activity
            android:name="com.udacity.studyMovies.udacitypopularmovies.SettingsActivity"
            android:label="@string/activity_settings_title"
            android:parentActivityName="com.udacity.studyMovies.udacitypopularmovies.MovieActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.udacity.studyMovies.udacitypopularmovies.SettingsActivity" />
        </activity>

    </application>

</manifest>